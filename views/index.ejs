<script>
    function aceitarCookies() {
        const userId = /* obtenha o ID do usuário se houver, caso contrário deixe nulo */
        
        fetch('/consentimento-cookies', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ consentido: true, userId: userId })
        }).then(() => document.getElementById('cookie-consent').style.display = 'none');
    }

    function rejeitarCookies() {
        const userId = /* obtenha o ID do usuário se houver, caso contrário deixe nulo */

        fetch('/consentimento-cookies', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ consentido: false, userId: userId })
        }).then(() => document.getElementById('cookie-consent').style.display = 'none');
    }

    window.onload = () => {
        if (!document.cookie.includes('cookieConsent')) {
            document.getElementById('cookie-consent').style.display = 'block';
        }
    };
</script>

